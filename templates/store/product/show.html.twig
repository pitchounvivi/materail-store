{% extends 'store/product/_base.html.twig' %}

{% block titleContent %}Hello ProductController!{% endblock %}

{% block bodyContent %}
    <h2>Product</h2>

    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h3 class="card-title">{{produit.id}}</h3>
            <h3 class="card-subtitle mb-2 text-muted">{{produit.name}}</h3>
            <p class="card-text">{{produit.description}}</p>
            <a href="{{ path("store_product_edit",{"id":produit.id})}}">Edit</a>


            <form action="{{ path("store_product_delete",{"id":produit.id})}}" method="post">
                <input type="hidden" name="_method" value="DELETE"/>
                <input type="hidden" name="_token" value="{{
                csrf_token('delete'~ produit.id)
                }}"/>
                <button>Delete</button>
            </form>

        </div>
    </div>

{% endblock %}
